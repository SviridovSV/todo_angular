%form.auth-form{"ng-submit": "register()"}
  .form-head
    Sign up
  .form-body
    .form-group
      %label.control-label{for: "email"}
        Enter your email
      %input.form-control{"ng-model": "user.email", placeholder: "Email", type: "email"}
    .form-group
      %label.control-label{for: "password"}
        Password
      %input.form-control{"ng-model": "user.password", placeholder: "Password", type: "password"}
    %input.btn.btn-default{type: "submit", value: "Sign up"}
    Have an Account?
    %a{"ui-sref": "login"} Log In